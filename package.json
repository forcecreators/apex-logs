{
	"name": "apex-logs",
	"displayName": "Apex Logs - Log Profiling & Analysis",
	"description": "Profile & Analyze Apex Logs Directly in VSCode!",
	"version": "0.1.0",
	"publisher": "forcecreators",
	"license": "MIT License",
	"preview": true,
	"icon": "https://raw.githubusercontent.com/forcecreators/apex-logs/master/ui/media/ApexLogs.jpeg",
	"keywords": [
		"Salesforce",
		"Apex",
		"Log",
		"Profiler",
		"Analyzer",
		"Debugging",
		"Logging",
		"Limits",
		"Visual",
		"Profiling"
	],
	"engines": {
		"vscode": "^1.51.0"
	},
	"extensionDependencies": [
		"salesforce.salesforcedx-vscode"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onView:forcecreators.apexlogs.explorer.remotelogs",
		"onCommand:forcecreators.apexlogs.explorer.startlogging",
		"onCustomEditor:forcecreators.apexlogs.editor"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "log-explorer",
					"title": "Log Explorer",
					"icon": "./ui/icons/journal-code.svg"
				}
			]
		},
		"views": {
			"log-explorer": [
				{
					"type": "webview",
					"id": "forcecreators.apexlogs.explorer.controlpanel",
					"name": "Settings"
				},
				{
					"id": "forcecreators.apexlogs.explorer.remotelogs",
					"name": "Remote Logs"
				}
			]
		},
		"commands": [
			{
				"command": "forcecreators.apexlogs.explorer.startlogging",
				"title": "Start Logging"
			},
			{
				"command": "forcecreators.apexlogs.explorer.openlog",
				"title": "Open Remote Log"
			}
		],
		"customEditors": [
			{
				"viewType": "forcecreators.apexlogs.editor",
				"displayName": "Salesforce Log Viewer",
				"selector": [
					{
						"filenamePattern": "*.log"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
